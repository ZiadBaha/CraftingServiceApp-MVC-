<!-- Counter Up JavaScript -->
<script>
    $(document).ready(function () {
        function startCounting() {
            const counters = [
                { element: $('.col-md-6:nth-child(1) h2'), finalValue: 35 },
                { element: $('.col-md-6:nth-child(2) h2'), finalValue: 150 },
                { element: $('.col-md-6:nth-child(3) h2'), finalValue: 1500 },
                { element: $('.col-md-6:nth-child(4) h2'), finalValue: 750 }
            ];

            counters.forEach(counter => {
                var $this = counter.element;
                $({ countNum: 0 }).animate({ countNum: counter.finalValue }, {
                    duration: 2500,
                    easing: 'swing',
                    step: function () {
                        $this.text(Math.floor(this.countNum));
                    },
                    complete: function () {
                        $this.text(counter.finalValue);
                        $this.addClass('counter-complete');
                    }
                });
            });
        }

        if (typeof Waypoint !== 'undefined') {
            var waypoint = new Waypoint({
                element: document.querySelector('.fact'),
                handler: function () {
                    startCounting();
                    this.destroy();
                },
                offset: '75%'
            });
        } else {
            setTimeout(startCounting, 500);
        }
    });
</script>

