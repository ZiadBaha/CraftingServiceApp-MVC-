@model CraftingServiceApp.Web.ViewModels.CraftersViewModel

<div class="card shadow-lg mb-4 border-0 rounded-4">
    <div class="card-body text-center p-4">
        <img src="@Model.ProfilePic"
             class="img-fluid rounded-circle shadow-sm mb-3"
             style="width: 150px; height: 150px; object-fit: cover;"
             alt="Profile Picture" />

        <h2 class="h4 fw-bold mb-2">@Model.FullName</h2>

        <p class="text-muted mb-0">
            <i class="fas fa-phone-alt me-2"></i> @Model.PhoneNumber
        </p>
    </div>
</div>
